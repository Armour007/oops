# Utopia Backend - Production Environment
# Set these in your hosting platform (Railway/Render)

# Server
PORT=5000
NODE_ENV=production

# MongoDB Atlas Connection String
# Get this from MongoDB Atlas dashboard
MONGO_URI=mongodb+srv://username:password@cluster.mongodb.net/utopia?retryWrites=true&w=majority

# Authentication (REQUIRED - Generate a secure 64 char random string)
# Use: openssl rand -hex 32
JWT_SECRET=GENERATE_A_SECURE_64_CHARACTER_STRING_HERE
JWT_EXPIRE=30d

# Cloudinary (for image uploads) - Optional
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# CORS - Production URLs
CORS_ORIGINS=https://utopia.app,https://api.utopia.app

# Rate Limiting (Production values - more restrictive)
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_GENERAL=100
RATE_LIMIT_MAX_AUTH=10

# Expo Push Notifications
EXPO_ACCESS_TOKEN=your_expo_access_token
